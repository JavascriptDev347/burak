{

  "compilerOptions": {
    "target": "ES2020",
    "module": "Commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
    //    "strictNullChecks": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}